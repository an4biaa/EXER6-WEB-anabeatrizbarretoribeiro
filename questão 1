    <p>Digite seu nome:</p>
    
    <!-- Campo de entrada e botão para submeter -->
    <input type="text" id="entradaTexto" placeholder="Seu nome">
    <button onclick="exibirTexto()">Clique aqui</button> 
    
    <p id="mensagem">Por favor, insira seu nome.</p>
    <script>
      function exibirTexto() {
       let texto = document.getElementById("entradaTexto").value;
       document.getElementById("mensagem").innerHTML = "Olá, " + texto + " ! Seja bem-vindo a página do Ana beatriz";
      }
    </script>
